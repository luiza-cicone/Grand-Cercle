<?xml version="1.0" encoding="utf-8"?>
 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent" >
 	
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_height="55dp"
		android:layout_width="fill_parent" android:gravity="center_vertical|left"
		>
		<TextView android:layout_height="wrap_content"
			android:layout_weight="1" 
			android:textAppearance="@style/ListItemTextStyle"
			android:layout_width="fill_parent" 
			android:id="@+id/Cercles"
			android:text="Cercles" />
	 
		<ImageView android:src="@drawable/list_item_arrow"
			android:layout_weight="0" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_height="55dp"
		android:layout_width="fill_parent" android:gravity="center_vertical|left"
		>
		<TextView android:layout_height="wrap_content"
			android:layout_weight="1" 
			android:textAppearance="@style/ListItemTextStyle"
			android:layout_width="fill_parent" 
			android:id="@+id/Clubs"
			android:text="Clubs" />
	 
		<ImageView android:src="@drawable/list_item_arrow"
			android:layout_weight="0" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_height="55dp"
		android:layout_width="fill_parent" android:gravity="center_vertical|left"
		>	
		<TextView android:layout_height="wrap_content"
			android:layout_weight="1" android:textAppearance="@style/ListItemTextStyle"
			android:layout_width="fill_parent" 
			android:id="@+id/Types"
			android:text="Types" />
	 
		<ImageView android:src="@drawable/list_item_arrow"
			android:layout_weight="0" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
 	</LinearLayout>
</LinearLayout>

